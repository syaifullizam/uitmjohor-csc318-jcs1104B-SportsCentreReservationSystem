			<?php 
				$ttl=0;
				$masa = $rs['end']-$rs['start'];
				$dMasa=0;
				$dAge=0;
				$net=0;
				
				if ($rs['facilities'] == "Futsal Court")
				{
					$ttl = 80 * $masa ;
				}
				else if ($rs['facilities'] == "Badminton Court")
				{
					$ttl = 20 ;
