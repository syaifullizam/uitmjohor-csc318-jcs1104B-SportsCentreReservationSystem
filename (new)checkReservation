						if ($rs['facilities'] == "Futsal Court")
						{
							$dMasa = 10/100 * 80 ;
						}
						else if ($rs['facilities'] == "Badminton Court")
						{
							$dMasa = 10/100 * 20 ;
						}
						else if ($rs['facilities'] == "Gymnasium")
						{
							$dMasa = 10/100 * 10;
						}
						else if ($rs['facilities'] == "Swimming Pool")
						{
							$dMasa = 10/100 * 15 ;
						}
						else if ($rs['facilities'] == "Squash Court")
						{
							$dMasa = 10/100 * 20 ;
						}
						else
						{
							$dMasa = 10/100 * 10;
						}
				}
				else
				{
					$dMasa = 0;
				}
				
				if ($rs['age'] < '13')
				{
					$dAge = 30/100 * $ttl;
				}
				else if ($rs['age'] > '60')
				{
					$dAge = 30/100 * $ttl;
				}
				else
				{
					$dAge = 0;
				}
				
				$dis = $dMasa + $dAge;
				$net = $ttl - $dis;
				
